<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Crud</title>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900 p-10 text-white">
        <a href="/" class="text-zinc-500">Back to home</a>
      <h1 class="text-3xl tracking-tighter mb-3">All User</h1>
      <div class="users flex gap-3 flex-wrap">
        <%if(users.length == 0){ %>
            <a href="/" class="text-zinc-300"> No user Found Click hear to create user</a>
       <% } %>
        <% users.forEach(function(user){ %>
            <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                <div class="w-full overflow-hidden h-52 bg-zinc-500 rounded-lg">
                    <img class="w-full h-full object-cover" src="<%= user.url %>" alt="">
                </div>
                <h1 class="text-xl tracking-tighter mt-3"><%= user.name %></h1>
                <h5 class="text-zinc-500"><%= user.email %></h5>
                <div class="flex gap-3">
                  <a href="/edit/<%= user._id %>" class="text-zinc-300"> Edit user</a>
                  <a href="/delete/<%= user._id %>" class="text-red-500">delete user </a>
                </div>
              </div>

      <%  }) %>
      </div>
    </div>
    <script src="js/script.js"></script>
  </body>
</html>
